    <script>
        function clearNotes() {
            if (confirm('Weet je zeker dat je de notities wilt wissen?')) {
                document.getElementById('teamNotes').value = '';
            }
        }

        document.querySelectorAll('.evidence-item').forEach(item => {
            item.addEventListener('click', function() {
                this.style.background = '#fff9e6';
                this.style.borderLeftColor = '#654321';
                setTimeout(() => {
                    this.style.background = '#f5e6d3';
                    this.style.borderLeftColor = '#8b4513';
                }, 300);
            });
        });
